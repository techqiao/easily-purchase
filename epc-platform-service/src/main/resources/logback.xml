<configuration>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <jmxConfigurator/>

    <springProperty scope="context" name="app_name" source="spring.application.name" />

    <appender name="appLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/opt/logs/platform/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/opt/logs/platform/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS}  [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="dbLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/opt/logs/platform/db.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/opt/logs/platform/db.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS}  [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.epc.platform.service.mapper" level="DEBUG">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="org.apache.ibatis" level="@mvn.log.level@" additivity="false">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="org.mybatis.spring" level="@mvn.log.level@" additivity="false">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.Connection" level="@mvn.log.level@" additivity="false">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.Statement" level="@mvn.log.level@" additivity="false">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.PreparedStatement" level="@mvn.log.level@" additivity="false">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.ResultSet" level="@mvn.log.level@" additivity="false">
        <appender-ref ref="dbLog"/>
    </logger>


    <root level="@mvn.log.level@">
        <appender-ref ref="appLog" />
        <appender-ref ref="dbLog" />
        <appender-ref ref="CONSOLE" />
    </root>


</configuration>
