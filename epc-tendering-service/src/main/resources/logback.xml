<configuration>
    <jmxConfigurator/>

    <property name="log.pattern" value="%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n" />

    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <appender name="appLog" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>@logging.path@/app_tendering.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>@logging.path@/app_tendering.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>1024MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

    </appender>

    <appender name="dbLog" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>@logging.path@/db_tendering.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>@logging.path@/db_tendering.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

    </appender>

    <logger name="jdbc.sqltiming" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="com.ibatis" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="com.ibatis.common.jdbc.ScriptRunner" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="com.ibatis.sqlmap.engine.impl.DEBUG" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.Connection" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.Statement" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.PreparedStatement" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>
    <logger name="java.sql.ResultSet" level="@log.level@">
        <appender-ref ref="dbLog"/>
    </logger>

    <root level="@log.level@">
        <appender-ref ref="appLog"/>
        <appender-ref ref="console" />
    </root>
</configuration>