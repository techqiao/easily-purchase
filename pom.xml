<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.epc</groupId>
    <artifactId>easily-purchase</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>

    <modules>
        <!--  微服务注册中心     -->
        <module>epc-eureka-server</module>
        <!--  平台网关     -->
        <module>epc-mobile-gateway</module>
        <!--  移动端接口服务      -->
        <module>epc-mobile-client</module>
        <!--  移动端接口api      -->
        <module>epc-mobile-facade</module>
        <!--  管理后台运营商数据服务      -->
        <module>epc-operator-service</module>
        <!--  管理后台平台数据服务      -->
        <module>epc-platform-service</module>
        <!--  管理后台接口API      -->
        <module>epc-administration-facade</module>
        <!--  管理后台展示应用      -->
        <module>epc-administration-client</module>
        <!--  支付数据服务  -->
        <module>epc-payment-service</module>
        <!--  招标采购数据服务  -->
        <module>epc-tenders-service</module>
        <!--  平台用户数据服务  -->
        <module>epc-web-service</module>
        <!--  web端数据服务  -->
        <module>epc-web-client</module>
        <!--  web端接口api  -->
        <module>epc-web-facade</module>
        <!--  公共工具包 -->
        <module>epc-common-util</module>
        <module>epc-bidding-service</module>
        <!--  招标数据服务 -->
        <module>epc-tendering-service</module>
    </modules>

    <profiles>
        <profile>
            <!-- 本地开发环境 -->
            <id>dev</id>
            <properties>
                <profiles.active>dev</profiles.active>
                <mvn.log.path>./logs</mvn.log.path>
                <mvn.log.level>INFO</mvn.log.level>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <!-- 测试环境 -->
            <id>test</id>
            <properties>
                <profiles.active>test</profiles.active>
                <mvn.log.path>/opt/logs</mvn.log.path>
                <mvn.log.level>DEBUG</mvn.log.level>
            </properties>
        </profile>
        <profile>
            <!-- 生产环境 -->
            <id>prod</id>
            <properties>
                <profiles.active>prod</profiles.active>
                <mvn.log.path>/data/logs/</mvn.log.path>
                <mvn.log.level>WARN</mvn.log.level>
            </properties>
        </profile>
    </profiles>
</project>